<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@drawable/top_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/catss" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="MAU"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="13dp"
                    tools:layout_editor_absoluteY="385dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A sweet and cute kitty"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="423dp" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="15dp"
                    tools:layout_editor_absoluteY="455dp">

                    <View
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="#ee4266"
                        android:translationX="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="308dp"
                    tools:layout_editor_absoluteY="455dp">
                    <View
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="#f4bbd3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="210dp"
                    tools:layout_editor_absoluteY="455dp">

                    <View
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="#ee4266" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="455dp">

                    <View
                        android:layout_width="70dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="#f4bbd3" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/profile"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="611dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="634dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="340dp"
                    android:layout_height="74dp"
                    android:text="Adorable white cat named Mau is seeking a loving home for adoption.Sweet and affectionate, she is the perfect furry companion. Ready to bring joy to your life!"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="682dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Nikhil"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="611dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="189dp"
                    android:layout_height="45dp"
                    android:background="#ee4266"
                    android:text="Contact Owner"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="814dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>